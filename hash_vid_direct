import hashlib

def hash_video_directly(video_path):
    """Hash a video file directly without using FFmpeg."""
    BUF_SIZE = 65536  # 64KB
    sha256 = hashlib.sha256()

    with open(video_path, 'rb') as f:
        while True:
            data = f.read(BUF_SIZE)
            if not data:
                break
            sha256.update(data)

    return sha256.hexdigest()
